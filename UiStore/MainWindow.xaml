<Window x:Class="UiStore.MainWindow"
        xmlns:behaviors="clr-namespace:UiStore.Behaviors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UiStore"
        mc:Ignorable="d"
        Background="LightGreen"
        Title="{Binding Title}" Height="600" Width="1024">
    <Grid Margin="0,0,0,0">
        <!-- Khai báo chia cột -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <!-- Cột trái: 1 phần -->
            <ColumnDefinition Width="1*" />
            <!-- Cột phải: 1 phần -->
            <ColumnDefinition Width="1*" />
            <!-- Cột phải: 1 phần -->
        </Grid.ColumnDefinitions>

        <!-- Khai báo chia hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng trên: Header -->
            <RowDefinition Height="*"/>
            <!-- Hàng giữa: Info -->
            <RowDefinition Height="Auto"/>
            <!-- Hàng dưới: nội dung/log -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="1" Background="#EEE" Padding="10" Margin="5" CornerRadius="5" Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Thông tin hệ thống" FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding PcName, StringFormat= 'Tên máy:  {0}'}" Margin="10 2"/>
                <TextBlock Text="{Binding Product, StringFormat= 'Tên hàng: {0}'}" Margin="10 2"/>
                <TextBlock Text="{Binding Station, StringFormat= 'Tên trạm:  {0}'}" Margin="10 2"/>
                <ListBox ItemsSource="{Binding Ips}" Margin="10 10" Height="100"/>
            </StackPanel>
        </Border>

        <!-- MAC -->
        <Border Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="2" Background="#F5F5F5" Padding="10" Margin="5" CornerRadius="5" Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Scan MAC" FontWeight="Bold" FontSize="14" Margin="0 0 0 5"/>
                <TextBox/>
            </StackPanel>
        </Border>

        <!-- Ứng dụng -->
        <Border Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="2" Background="#F5F5F5" Padding="10" Margin="5" CornerRadius="5" Effect="{StaticResource ShadowEffect}" >
            <ItemsControl ItemsSource="{Binding Applications}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="5" CornerRadius="8"
                        Effect="{StaticResource ShadowEffect}"
                        behaviors:MouseDoubleClickBehavior.Command="{Binding LaunchCommand}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightGray"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <!-- Border chứa màu nền theo Binding -->
                            <Border Background="{Binding BackgroundColor}" CornerRadius="6" Padding="8">
                                <Border Background="{Binding BackgroundColor}" CornerRadius="6" Padding="8">
                                    <StackPanel Width="100">
                                        <Image Width="64" Height="64" Source="{Binding IconSource}" Stretch="Uniform" Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding Name}"
                                     TextAlignment="Center"
                                     TextWrapping="Wrap"
                                     Width="100"
                                     TextTrimming="CharacterEllipsis"/>
                                        <ProgressBar Value="{Binding Progress}" Height="5"/>
                                    </StackPanel>
                                </Border>
                            </Border>

                        <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Mở ứng dụng" Command="{Binding LaunchCommand}" />
                                    <MenuItem Header="Thông tin..." Command="{Binding ShowInfoCommand}" />
                                </ContextMenu>
                            </Border.ContextMenu>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Logs Panel -->
        <Border Grid.Row="2" Grid.RowSpan="1" Grid.Column="0"  Grid.ColumnSpan="3"  Background="#F5F5F5" Padding="10" Margin="5" CornerRadius="5" Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <ListBox ItemsSource="{Binding LogLines}" Height="80"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
